-- Variables
local freezeEnabled = false
local acceptEnabled = false
local selectedPlayer = nil

-- Function to load player profile picture
local function loadPlayerProfile(userId)
    local success, result = pcall(function()
        local thumbnail = Players:GetUserThumbnailAsync(userId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size420x420)
        return thumbnail
    end)
    
    if success then
        ProfilePicture.Image = result
    else
        ProfilePicture.Image = "rbxasset://textures/ui/GuiImagePlaceholder.png"
    end
end

-- Function to search for player
local function searchPlayer(username)
    local success, result = pcall(function()
        return Players:GetUserIdFromNameAsync(username)
    end)
    
    if success and result then
        selectedPlayer = {
            Name = username,
            UserId = result
        }
        
        PlayerInfoFrame.Visible = true
        PlayerName.Text = username
        PlayerID.Text = "UserID: " .. result
        loadPlayerProfile(result)
        
        -- Update content position
        local tween = TweenService:Create(Content, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {
            Size = UDim2.new(1, -40, 1, -170)
        })
        tween:Play()
    else
        PlayerInfoFrame.Visible = false
        selectedPlayer = nil
        PlayerName.Text = "Player Name"
        PlayerID.Text = "UserID: "
        ProfilePicture.Image = "rbxasset://textures/ui/GuiImagePlaceholder.png"
        
        -- Reset content position
        local tween = TweenService:Create(Content, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {
            Size = UDim2.new(1, -40, 1, -100)
        })
        tween:Play()
    end
end

-- Search when Enter is pressed
SearchBox.FocusLost:Connect(function(enterPressed)
    if enterPressed and SearchBox.Text ~= "" then
        searchPlayer(SearchBox.Text)
    end
end)

-- Toggles section
local TogglesLabel = Instance.new("TextLabel")
