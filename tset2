TogglesLabel.Parent = Content

-- Function to create modern toggle
local function createToggle(name, labelText, yPosition)
    local ToggleFrame = Instance.new("Frame")
    ToggleFrame.Name = name .. "Frame"
    ToggleFrame.Size = UDim2.new(1, 0, 0, 60)
    ToggleFrame.Position = UDim2.new(0, 0, 0, yPosition)
    ToggleFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
    ToggleFrame.BorderSizePixel = 0
    
    local ToggleCorner = Instance.new("UICorner")
    ToggleCorner.CornerRadius = UDim.new(0, 8)
    ToggleCorner.Parent = ToggleFrame
    
    -- Toggle background (the switch)
    local ToggleBackground = Instance.new("Frame")
    ToggleBackground.Name = "ToggleBackground"
    ToggleBackground.Size = UDim2.new(0, 50, 0, 26)
    ToggleBackground.Position = UDim2.new(1, -70, 0.5, -13)
    ToggleBackground.BackgroundColor3 = Color3.fromRGB(80, 80, 100)
    ToggleBackground.BorderSizePixel = 0
    
    local ToggleBackgroundCorner = Instance.new("UICorner")
    ToggleBackgroundCorner.CornerRadius = UDim.new(1, 0)
    ToggleBackgroundCorner.Parent = ToggleBackground
    
    -- Toggle button (the circle)
    local ToggleButton = Instance.new("Frame")
    ToggleButton.Name = "ToggleButton"
    ToggleButton.Size = UDim2.new(0, 20, 0, 20)
    ToggleButton.Position = UDim2.new(0, 3, 0.5, -10)
    ToggleButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    ToggleButton.BorderSizePixel = 0
    
    local ToggleButtonCorner = Instance.new("UICorner")
    ToggleButtonCorner.CornerRadius = UDim.new(1, 0)
    ToggleButtonCorner.Parent = ToggleButton
    
    ToggleButton.Parent = ToggleBackground
    
    -- Label
    local ToggleLabel = Instance.new("TextLabel")
    ToggleLabel.Name = "ToggleLabel"
    ToggleLabel.Size = UDim2.new(1, -130, 1, 0)
    ToggleLabel.Position = UDim2.new(0, 15, 0, 0)
    ToggleLabel.BackgroundTransparency = 1
    ToggleLabel.Text = labelText
    ToggleLabel.TextColor3 = Color3.fromRGB(220, 220, 240)
    ToggleLabel.TextSize = 16
    ToggleLabel.Font = Enum.Font.Gotham
    ToggleLabel.TextXAlignment = Enum.TextXAlignment.Left
    ToggleLabel.Parent = ToggleFrame
    
    -- Status label
    local StatusText = Instance.new("TextLabel")
    StatusText.Name = "StatusText"
    StatusText.Size = UDim2.new(0, 40, 0, 20)
    StatusText.Position = UDim2.new(1, -110, 0.5, -10)
    StatusText.BackgroundTransparency = 1
    StatusText.Text = "OFF"
    StatusText.TextColor3 = Color3.fromRGB(255, 100, 100)
    StatusText.TextSize = 12
    StatusText.Font = Enum.Font.GothamBold
    StatusText.Parent = ToggleFrame
    
    ToggleBackground.Parent = ToggleFrame
    ToggleFrame.Parent = Content
    
    return ToggleFrame, ToggleButton, ToggleBackground, StatusText
end

-- Create toggles
local FreezeToggleFrame, FreezeToggleButton, FreezeToggleBackground, FreezeStatus = createToggle("Freeze", "Freeze victims screen", 180)
local AcceptToggleFrame, AcceptToggleButton, AcceptToggleBackground, AcceptStatus = createToggle("Accept", "Auto accept trade", 250)

-- Function to animate toggle
local function animateToggle(toggleButton, toggleBackground, isOn)
    local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    
    if isOn then
        local tween1 = TweenService:Create(toggleButton, tweenInfo, {
            Position = UDim2.new(1, -23, 0.5, -10)
        })
        local tween2 = TweenService:Create(toggleBackground, tweenInfo, {
            BackgroundColor3 = Color3.fromRGB(80, 200, 120)
        })
        tween1:Play()
        tween2:Play()
    else
        local tween1 = TweenService:Create(toggleButton, tweenInfo, {
            Position = UDim2.new(0, 3, 0.5, -10)
        })
        local tween2 = TweenService:Create(toggleBackground, tweenInfo, {
            BackgroundColor3 = Color3.fromRGB(80, 80, 100)
        })
        tween1:Play()
        tween2:Play()
    end
end

-- Toggle functionality (VISUAL ONLY - for demonstration)
local function toggleFreeze()
    if selectedPlayer then
        freezeEnabled = not freezeEnabled
        animateToggle(FreezeToggleButton, FreezeToggleBackground, freezeEnabled)
        FreezeStatus.Text = freezeEnabled and "ON" or "OFF"
        FreezeStatus.TextColor3 = freezeEnabled and Color3.fromRGB(100, 255, 100) or Color3.fromRGB(255, 100, 100)
        
        if freezeEnabled then
            print("[VISUAL] Freeze enabled for:", selectedPlayer.Name)
            -- Visual effect for demonstration
            local tween = TweenService:Create(PlayerInfoFrame, TweenInfo.new(0.3), {
                BackgroundColor3 = Color3.fromRGB(45, 35, 45)
            })
            tween:Play()
        else
            print("[VISUAL] Freeze disabled for:", selectedPlayer.Name)
            -- Reset visual effect
            local tween = TweenService:Create(PlayerInfoFrame, TweenInfo.new(0.3), {
                BackgroundColor3 = Color3.fromRGB(35, 35, 45)
            })
            tween:Play()
        end
    else
        print("[VISUAL] Please select a player first!")
    end
end

local function toggleAccept()
    if selectedPlayer then
        acceptEnabled = not acceptEnabled
        animateToggle(AcceptToggleButton, AcceptToggleBackground, acceptEnabled)
        AcceptStatus.Text = acceptEnabled and "ON" or "OFF"
        AcceptStatus.TextColor3 = acceptEnabled and Color3.fromRGB(100, 255, 100) or Color3.fromRGB(255, 100, 100)
        
        if acceptEnabled then
            print("[VISUAL] Auto accept enabled for:", selectedPlayer.Name)
            -- Visual effect for demonstration
            local tween = TweenService:Create(ProfilePictureBorder, TweenInfo.new(0.3), {
                Color = Color3.fromRGB(120, 255, 120)
            })
            tween:Play()
        else
            print("[VISUAL] Auto accept disabled for:", selectedPlayer.Name)
            -- Reset visual effect
            local tween = TweenService:Create(ProfilePictureBorder, TweenInfo.new(0.3), {
                Color = Color3.fromRGB(80, 120, 255)
            })
            tween:Play()
        end
    else
        print("[VISUAL] Please select a player first!")
    end
end

-- Connect toggle clicks
FreezeToggleFrame.MouseButton1Click:Connect(toggleFreeze)
AcceptToggleFrame.MouseButton1Click:Connect(toggleAccept)

-- Hover effects for toggles
local function setupHoverEffects(toggleFrame)
    toggleFrame.MouseEnter:Connect(function()
        if guiVisible then
            local tween = TweenService:Create(toggleFrame, TweenInfo.new(0.2), {
                BackgroundColor3 = Color3.fromRGB(40, 40, 50)
            })
            tween:Play()
        end
    end)
    
    toggleFrame.MouseLeave:Connect(function()
        if guiVisible then
            local tween = TweenService:Create(toggleFrame, TweenInfo.new(0.2), {
                BackgroundColor3 = Color3.fromRGB(35, 35, 45)
            })
            tween:Play()
        end
    end)
end

setupHoverEffects(FreezeToggleFrame)
setupHoverEffects(AcceptToggleFrame)

-- Make the GUI draggable
local dragging = false
local dragInput, dragStart, startPos

local function update(input)
    local delta = input.Position - dragStart
    MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

TopBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 and guiVisible then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

TopBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if dragging and input == dragInput and guiVisible then
        update(input)
    end
end)

-- Keyboard shortcut to show/hide GUI (optional)
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.RightControl then
        HideButton:Click()
    end
end)

print("Freeze Trade Script GUI loaded!")
print("Features:")
print("1. Modern rounded design with shadows")
print("2. Player search with profile pictures")
print("3. Two toggle buttons (Freeze victims screen & Auto accept trade)")
print("4. Hide/Show toggle button (_ = hide, □ = show)")
print("5. Draggable window")
print("6. Visual effects only - for demonstration")
print("")
print("Controls:")
print("- Click top bar to drag")
print("- Click '_' to hide GUI")
print("- Click '×' to close GUI")
print("- Press RightControl to toggle hide/show")
