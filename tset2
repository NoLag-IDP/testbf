-- Freeze Trade Script GUI (Modern Design with Hide/Show)
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local mouse = player:GetMouse()
local HttpService = game:GetService("HttpService")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

-- Global variables for hide/show functionality
local guiVisible = true
local guiHiddenPosition = UDim2.new(1, 10, 0, 10) -- Position when hidden
local guiVisiblePosition = UDim2.new(0.5, -175, 0.5, -200) -- Original position

-- Create the main GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "FreezeTradeGUI"
ScreenGui.Parent = game.CoreGui or player:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

