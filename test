-- Freeze Trade Script GUI
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local mouse = player:GetMouse()

-- Create the main GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "FreezeTradeGUI"
ScreenGui.Parent = game.CoreGui or player:WaitForChild("PlayerGui")

-- Main frame (rectangle box)
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0, 300, 0, 200)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -100)
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
MainFrame.BorderSizePixel = 2
MainFrame.BorderColor3 = Color3.fromRGB(80, 80, 100)
MainFrame.Parent = ScreenGui

-- Title
local Title = Instance.new("TextLabel")
Title.Name = "Title"
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Position = UDim2.new(0, 0, 0, 0)
Title.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
Title.BorderSizePixel = 0
Title.Text = "Freeze Trade Script"
Title.TextColor3 = Color3.fromRGB(220, 220, 255)
Title.TextSize = 20
Title.Font = Enum.Font.GothamBold
Title.Parent = MainFrame

-- Close button
local CloseButton = Instance.new("TextButton")
CloseButton.Name = "CloseButton"
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -30, 0, 5)
CloseButton.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
CloseButton.BorderSizePixel = 0
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.TextSize = 16
CloseButton.Font = Enum.Font.GothamBold
CloseButton.Parent = Title

CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Variables for toggle states
local freezeEnabled = false
local acceptEnabled = false

-- Freeze Victims Screen Toggle
local FreezeFrame = Instance.new("Frame")
FreezeFrame.Name = "FreezeFrame"
FreezeFrame.Size = UDim2.new(0.8, 0, 0, 40)
FreezeFrame.Position = UDim2.new(0.1, 0, 0, 60)
FreezeFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
FreezeFrame.BorderSizePixel = 1
FreezeFrame.BorderColor3 = Color3.fromRGB(80, 80, 100)
FreezeFrame.Parent = MainFrame

local FreezeToggle = Instance.new("TextButton")
FreezeToggle.Name = "FreezeToggle"
FreezeToggle.Size = UDim2.new(0, 60, 0, 30)
FreezeToggle.Position = UDim2.new(0, 10, 0.5, -15)
FreezeToggle.BackgroundColor3 = Color3.fromRGB(255, 60, 60) -- Red for off
FreezeToggle.BorderSizePixel = 0
FreezeToggle.Text = "OFF"
FreezeToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
FreezeToggle.TextSize = 14
FreezeToggle.Font = Enum.Font.GothamBold
FreezeToggle.Parent = FreezeFrame

local FreezeLabel = Instance.new("TextLabel")
FreezeLabel.Name = "FreezeLabel"
FreezeLabel.Size = UDim2.new(0, 180, 1, 0)
FreezeLabel.Position = UDim2.new(0, 80, 0, 0)
FreezeLabel.BackgroundTransparency = 1
FreezeLabel.Text = "Freeze victims screen"
FreezeLabel.TextColor3 = Color3.fromRGB(220, 220, 255)
FreezeLabel.TextSize = 16
FreezeLabel.TextXAlignment = Enum.TextXAlignment.Left
FreezeLabel.Font = Enum.Font.Gotham
FreezeLabel.Parent = FreezeFrame

-- Auto Accept Trade Toggle
local AcceptFrame = Instance.new("Frame")
AcceptFrame.Name = "AcceptFrame"
AcceptFrame.Size = UDim2.new(0.8, 0, 0, 40)
AcceptFrame.Position = UDim2.new(0.1, 0, 0, 110)
AcceptFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
AcceptFrame.BorderSizePixel = 1
AcceptFrame.BorderColor3 = Color3.fromRGB(80, 80, 100)
AcceptFrame.Parent = MainFrame

local AcceptToggle = Instance.new("TextButton")
AcceptToggle.Name = "AcceptToggle"
AcceptToggle.Size = UDim2.new(0, 60, 0, 30)
AcceptToggle.Position = UDim2.new(0, 10, 0.5, -15)
AcceptToggle.BackgroundColor3 = Color3.fromRGB(255, 60, 60) -- Red for off
AcceptToggle.BorderSizePixel = 0
AcceptToggle.Text = "OFF"
AcceptToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
AcceptToggle.TextSize = 14
AcceptToggle.Font = Enum.Font.GothamBold
AcceptToggle.Parent = AcceptFrame

local AcceptLabel = Instance.new("TextLabel")
AcceptLabel.Name = "AcceptLabel"
AcceptLabel.Size = UDim2.new(0, 180, 1, 0)
AcceptLabel.Position = UDim2.new(0, 80, 0, 0)
AcceptLabel.BackgroundTransparency = 1
AcceptLabel.Text = "Auto accept trade"
AcceptLabel.TextColor3 = Color3.fromRGB(220, 220, 255)
AcceptLabel.TextSize = 16
AcceptLabel.TextXAlignment = Enum.TextXAlignment.Left
AcceptLabel.Font = Enum.Font.Gotham
AcceptLabel.Parent = AcceptFrame

-- Status label
local StatusLabel = Instance.new("TextLabel")
StatusLabel.Name = "StatusLabel"
StatusLabel.Size = UDim2.new(0.8, 0, 0, 30)
StatusLabel.Position = UDim2.new(0.1, 0, 0, 160)
StatusLabel.BackgroundTransparency = 1
StatusLabel.Text = "Status: Both features disabled"
StatusLabel.TextColor3 = Color3.fromRGB(200, 200, 255)
StatusLabel.TextSize = 14
StatusLabel.Font = Enum.Font.Gotham
StatusLabel.Parent = MainFrame

-- Toggle functionality functions
local function toggleFreeze()
    freezeEnabled = not freezeEnabled
    if freezeEnabled then
        FreezeToggle.BackgroundColor3 = Color3.fromRGB(60, 255, 60) -- Green for on
        FreezeToggle.Text = "ON"
        -- Add your freeze victims screen script here
        -- Example: game.Players.LocalPlayer.PlayerGui.ScreenGui.Enabled = false
    else
        FreezeToggle.BackgroundColor3 = Color3.fromRGB(255, 60, 60) -- Red for off
        FreezeToggle.Text = "OFF"
        -- Add your unfreeze script here
    end
    updateStatus()
end

local function toggleAccept()
    acceptEnabled = not acceptEnabled
    if acceptEnabled then
        AcceptToggle.BackgroundColor3 = Color3.fromRGB(60, 255, 60) -- Green for on
        AcceptToggle.Text = "ON"
        -- Add your auto accept trade script here
        -- Example: auto accept trade logic
    else
        AcceptToggle.BackgroundColor3 = Color3.fromRGB(255, 60, 60) -- Red for off
        AcceptToggle.Text = "OFF"
        -- Add your disable auto accept script here
    end
    updateStatus()
end

local function updateStatus()
    local freezeText = freezeEnabled and "Freeze: ON" or "Freeze: OFF"
    local acceptText = acceptEnabled and "Auto Accept: ON" or "Auto Accept: OFF"
    StatusLabel.Text = "Status: " .. freezeText .. " | " .. acceptText
end

-- Connect toggle buttons
FreezeToggle.MouseButton1Click:Connect(toggleFreeze)
AcceptToggle.MouseButton1Click:Connect(toggleAccept)

-- Make the GUI draggable
local dragging = false
local dragInput, dragStart, startPos

local function update(input)
    local delta = input.Position - dragStart
    MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

Title.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

Title.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if dragging and input == dragInput then
        update(input)
    end
end)

-- Set initial status
updateStatus()

print("Freeze Trade Script GUI loaded!")
print("Toggle 1: Freeze victims screen")
print("Toggle 2: Auto accept trade")
